/*==============================================================*/
/* Table: UF                                                    */
/*==============================================================*/
create table UF (
BDCODUF              DM_CODIGO                      not null,
BDNOMEUF             DM_NOMES,
BDSIGLAUF            DM_SIGLA,
constraint PK_UF primary key (BDCODUF)
);

alter table CIDADE
   add constraint FK_CIDADE_FK_001_UF foreign key (BDCODUF)
      references UF (BDCODUF);

alter table CLIENTES
   add constraint FK_CLIENTES_FK_004_ENDERECO foreign key (BDCODEND)
      references ENDERECO (BDCODEND);

