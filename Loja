      references CIDADE (BDCODCID);

alter table FK_009
   add constraint FK_FK_009_FK_009_PRODUTO foreign key (BDPRODCOD)
      references PRODUTO (BDPRODCOD);

alter table FK_009
   add constraint FK_FK_009_FK_010_CATEGORI foreign key (BDCATCOD)
      references CATEGORIA (BDCATCOD);

alter table FORMA_DE_PAGAMENTO
   add constraint FK_FORMA_DE_FK_012_ESCOLHA_ foreign key (BDFORM_PAGMENTO)
      references ESCOLHA_FORMA_DE_PAGAMENTO (BDFORM_PAGMENTO);

alter table PEDIDO
   add constraint FK_PEDIDO_FK_007_CLIENTES foreign key (BDCODCLIENTE)
      references CLIENTES (BDCODCLIENTE);

alter table PEDIDO
   add constraint FK_PEDIDO_FK_011_FORMA_DE foreign key (BDFORMCOD)
      references FORMA_DE_PAGAMENTO (BDFORMCOD);

alter table PEDIDO
   add constraint FK_PEDIDO_FK_013_STATUS foreign key (BDSTATUSCOD)
      references STATUS (BDSTATUSCOD);

alter table PRODUTO
