/*==============================================================*/
/* Table: CATEGORIA                                             */
/*==============================================================*/
create table CATEGORIA (
BDCATCOD             DM_CODIGO                      not null,
BDCATDESC            DM_DESCRICAO,
constraint PK_CATEGORIA primary key (BDCATCOD)
);

/*==============================================================*/
/* Table: CIDADE                                                */
/*==============================================================*/
create table CIDADE (
BDCODCID             DM_CODIGO                      not null,
BDCODUF              DM_CODIGO                      not null,
BDNOMECID            DM_NOMES,
constraint PK_CIDADE primary key (BDCODCID)
);

/*==============================================================*/
/* Table: CLIENTES                                              */
/*==============================================================*/
create table CLIENTES (
BDCODCLIENTE         DM_CODIGO                      not null,
BDCODEND             DM_CODIGO                      not null,
BDNOME               DM_NOMES,
BDCPF                DM_CPF,
BDNascimento         DM_DATA,
BDCOMPLEMENTOEND     DM_ENDERECO,
constraint PK_CLIENTES primary key (BDCODCLIENTE)
);

/*==============================================================*/
/* Table: EMAIL                                                 */
/*==============================================================*/
create table EMAIL (
BDCODEMAIL           DM_CODIGO                      not null,
BDCODCLIENTE         DM_CODIGO                      not null,
BDEMAIL              DM_EMAIL,
constraint PK_EMAIL primary key (BDCODEMAIL)
);

/*==============================================================*/
/* Table: ENDERECO                                              */
/*==============================================================*/
create table ENDERECO (
BDCODEND             DM_CODIGO                      not null,
BDCODLOGR            DM_CODIGO                      not null,
BDCODCID             DM_CODIGO                      not null,
BDENDERECO           DM_ENDERECO,
BDCEP                DM_CEP,
BDBAIRRO             DM_BAIRRO,
constraint PK_ENDERECO primary key (BDCODEND)
);

/*==============================================================*/
/* Table: ESCOLHA_FORMA_DE_PAGAMENTO                            */
/*==============================================================*/
create table ESCOLHA_FORMA_DE_PAGAMENTO (
BDFORM_PAGMENTO      DM_CODIGO                      not null,
BDESCOLHA            DM_DESCRICAO,
constraint PK_ESCOLHA_FORMA_DE_PAGAMENTO primary key (BDFORM_PAGMENTO)
);

/*==============================================================*/
/* Table: FK_009                                                */
/*==============================================================*/
create table FK_009 (
BDPRODCOD            DM_CODIGO                      not null,
BDCATCOD             DM_CODIGO                      not null,
constraint PK_FK_009 primary key (BDPRODCOD, BDCATCOD)
);

/*==============================================================*/
/* Table: FORMA_DE_PAGAMENTO                                    */
/*==============================================================*/
create table FORMA_DE_PAGAMENTO (
